{
  "name": "pas-ui-automation",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod --source-map",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "format:write": "prettier **/*.{ts,json,md,scss} --write",
    "format:test": "prettier **/*.{ts,json,md,scss} --list-different",
    "e2e": "start-server-and-test start http-get://localhost:4200 cy:run",
    "cy:open": "cypress open",
    "cy:run": "./node_modules/.bin/cypress run --env configFile=local --headless",
    "cy:test": "start-server-and-test start http-get://localhost:4200 cy:run",

    "cy:dev": "cypress run --env configFile=dev",
    "cy:qa": "cypress run --env configFile=qa --headless",
    "cy:smokeqa": "cypress run --spec '**/smoke/*.js' --env configFile=qa --headless",
    "cy:regressionqa": "cypress run --env configFile=qa --headless",
    "cy:smokedev": "cypress run --spec '**/smoke/*.js' --env configFile=dev --headless",
    "cy:regressiondev": "cypress run --env configFile=dev --headless",

    "cy:ci:test-runner": "start-server-and-test start http-get://localhost:4201 cy:ci:test",
    "cy:clean:reports": "mkdirp cypress/reports && mkdirp cypress/reports/mochareports",
    "cy:pretest": "npm run cy:clean:reports",
    "cy:combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "cy:generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",

    "cy:posttest": "npm run cy:combine-reports && npm run cy:generate-report",
    "cy:ci:test": "npm run cy:clean:reports && npm run cy:test && npm run cy:posttest",
    "cy:ci:test:dev": "npm run cy:clean:reports && npm run cy:dev && npm run cy:posttest",
    "cy:ci:test:qa": "npm run cy:clean:reports && npm run cy:qa && npm run cy:posttest",
    "cy:ci:test:smokeqa": "npm run cy:clean:reports && npm run cy:smokeqa && npm run cy:posttest",
    "cy:ci:test:regressionqa": "npm run cy:clean:reports && npm run cy:regressionqa && npm run cy:posttest",
    "cy:ci:test:smokedev": "npm run cy:clean:reports && npm run cy:smokedev && npm run cy:posttest",
    "cy:ci:test:regressiondev": "npm run cy:clean:reports && npm run cy:regressiondev && npm run cy:posttest"
  },
  "private": true,
  "dependencies": {
    "@types/csvtojson": "^1.1.0",
    "circular-json": "^0.5.9",
    "crypto-js": "4.1.1",
    "csvtojson": "^1.1.12",
    "cypress-multi-reporters": "^1.4.0",
    "cypress-plugin-tab": "^1.0.5",
    "dateformat": "4.5.1",
    "exceljs": "^4.3.0",
    "flat": "^5.0.2",
    "fs": "0.0.1-security",
    "fs-extra": "^9.1.0",
    "mkdirp": "^1.0.4",
    "mocha": "^10.0.0",
    "mongoose": "^6.5.0",
    "mssql": "^7.3.1",
    "object-scan": "^18.5.1",
    "papaparse": "^5.3.2",
    "parse": "^3.4.3",
    "read-excel-file": "^5.6.1",
    "require.js": "^1.0.0",
    "typescript": "~4.1.3",
    "xlsx-calc": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.19",
    "@types/papaparse": "^5.3.3",
    "cypress": "^9.7.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-promise": "^1.1.0",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "moment": "^2.29.4",
    "momentjs": "^2.0.0",
    "mssql": "^7.3.1",
    "node-xlsx": "^0.21.2",
    "xlsx": "^0.18.5"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 9-11"
  ]
}
